{
  "plugins": ["@typescript-eslint", "prettier"],
  "extends": [
    "next/core-web-vitals",
    "plugin:@typescript-eslint/recommended",
    "plugin:prettier/recommended"
  ],
  "rules": {
    "prettier/prettier": [
      "error",
      // fixes lint complaining about CRLF line endings on windows
      {
        "endOfLine": "auto"
      }
    ]
  }
}
